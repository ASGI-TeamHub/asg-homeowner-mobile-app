{
  "expo": {
    "name": "ASG Solar",
    "slug": "asg-solar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#003d82"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ashadegreener.homeowner",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera access is needed to upload maintenance photos.",
        "NSPhotoLibraryUsageDescription": "Photo library access is needed to upload maintenance photos.",
        "NSFaceIDUsageDescription": "Face ID is used to securely authenticate your account."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#003d82"
      },
      "package": "com.ashadegreener.homeowner",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-firebase/app",
      "react-native-biometrics",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ASG Solar to access your photos to upload maintenance images."
        }
      ]
    ],
    "extra": {
      "apiBaseUrl": "https://lux.ashadegreener.co.uk/api/v1",
      "supportPhone": "0800 0000 000",
      "eas": {
        "projectId": "asg-homeowner-solar-app"
      }
    }
  }
}